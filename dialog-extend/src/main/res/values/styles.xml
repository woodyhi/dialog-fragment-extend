<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogFragmentStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="LeftSideDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/left_side_in</item>
        <item name="android:windowExitAnimation">@anim/left_side_out</item>
    </style>

    <style name="BottomSideDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_side_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_side_out</item>
    </style>

</resources>
